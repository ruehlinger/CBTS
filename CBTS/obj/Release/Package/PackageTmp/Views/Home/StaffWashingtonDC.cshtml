@using System.Web.Hosting
@using CBTS.Models
@{
    ViewBag.Title = "VBA CBTS";
    var tilestyle = ViewBag.Dev ? "thumbnail" : "thumbnaildisabled thumbnail disabled";

}

@section styles
{
    <style>
        .indxLft {
            overflow: hidden;
            background-image: none;
            background-color: #020a0d;
        }
    </style>

}
<div class="indxLft">
    <!--///////////////// CAROUSEL ///////////////-->
    <div class="carousel slide" id="theCarousel"
         data-interval="10000">

        <ol class="carousel-indicators">
            <li data-target="#theCarousel" data-slide-to="0"
                class="active"></li>
            <li data-target="#theCarousel" data-slide-to="1">
            </li>
            <li data-target="#theCarousel" data-slide-to="2">
            </li>
            <li data-target="#theCarousel" data-slide-to="3">
            </li>
            <li data-target="#theCarousel" data-slide-to="4">
            </li>
            <li data-target="#theCarousel" data-slide-to="5">
            </li>
        </ol>

        <div class="carousel-inner">
            <div class="item active">
                <img src="~/Images/Staff/WashingtonDC/AaronLee.jpg" alt="Aaron M. Lee, Assistant Director ED&T"
                     class="img-responsive" />
                <div class="carousel-caption">
                    <h4>Aaron M. Lee</h4>
                    <p>Assistant Director ED&T</p>
                </div>
            </div>
            <div class="item">
                <img src="~/Images/Staff/WashingtonDC/DerekLambert.jpg" alt="Derek Lambert, Chief Leadership Development"
                     class="img-responsive" />
                <div class="carousel-caption">
                    <h4>Derek Lambert</h4>
                    <p>Chief Leadership Development</p>
                </div>
            </div>
            <div class="item">
                <img src="~/Images/Staff/WashingtonDC/OnikaCoke.jpg" alt="Onika Coke-Muñoz, Chief Professional Development"
                     class="img-responsive" />
                <div class="carousel-caption">
                    <h4>Onika Coke-Muñoz</h4>
                    <p>Chief Professional Development</p>
                </div>
            </div>
            <div class="item">
                <img src="~/Images/Staff/WashingtonDC/JohnDominick.jpg" alt="John D. Dominick, Senior Program Manager"
                     class="img-responsive" />
                <div class="carousel-caption">
                    <h4>John D. Dominick</h4>
                    <p>Senior Program Manager</p>
                </div>
            </div>
            <div class="item">
                <img src="~/Images/Staff/WashingtonDC/AboladeThomas-Nibblett.jpg" alt="Abolade Thomas-Nibblett, Senior Program Manager"
                     class="img-responsive" />
                <div class="carousel-caption">
                    <h4>Abolade Thomas-Nibblett</h4>
                    <p>Senior Program Manager</p>
                </div>
            </div>
            <div class="item">
                <img src="~/Images/Staff/WashingtonDC/JamieGerwitz.jpg" alt="Jamie Gerwitz, Program Manager"
                     class="img-responsive" />
                <div class="carousel-caption">
                    <h4>Jamie Gerwitz</h4>
                    <p>Program Manager</p>
                </div>
            </div>
        </div>

        <a href="#theCarousel" class="carousel-control left"
           data-slide="prev">
            <span class="icon-prev">
            </span>
        </a>
        <a href="#theCarousel" class="carousel-control right"
           data-slide="next">
            <span class="icon-next">
            </span>
        </a>
    </div>

    <!--///////////////// CAROUSEL END ///////////////-->
</div>
<div class="indxRight">
    <div class="mission_header">
        <p>MISSION</p>
    </div>
    <div class="mission_body">
        <p>To provide relevant and useful developmental training to VBA employees who seek to enhance their individual development and who seek to increase their contribution to the Organization.</p>

    </div>

    <div class="mission_header">
        <p>MOTTO</p>
    </div>

    <div class="mission_body">
        <p>“Leadership and learning are indispensable of each other” –John F. Kennedy</p>
    </div>



</div>



@section scripts
    {
    <script language="javascript">
        $(document).ready(function () {


            var $lft = $(".indxLft");
            var $rght = $(".indxRight");
            var hl = $lft.height();
            var hr = $rght.height();
            var bp;

            if (hl > hr) {

                $rght.height(hl);

            } else if (hr > hl) {
                bp = hr - hl;
                $lft.height(hr);
                $lft.css("background-position-y", bp);
            }

        });

    </script>

}
